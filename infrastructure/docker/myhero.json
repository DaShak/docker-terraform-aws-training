[
    {
        "name": "myhero-${HERO}",
        "image": "${DOCKER_URL}",
        "memoryReservation": 256,
        "cpu": 0,
        "essential": true,
        "portMappings": [
            {
                "containerPort": 5000
            }
        ],
        "environment": [
            {
                "name": "HERO",
                "value": "${HERO}"
            },
            {
                "name": "FLASK_ENV",
                "value": "production"
            },
            {
                "name": "HOST",
                "value": "0.0.0.0"
            }            
        ],
        "healthCheck": {
            "retries": 5,
            "command": [
                "CMD-SHELL",
                "curl -f http://127.0.0.1:5000/my  || exit 1"
            ],
            "timeout": 5,
            "interval": 30,
            "startPeriod": 20
        }
    }
]